<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="5"
            android:hint="请输入验证码"
            android:textColorHint="#cfcdcd"
            android:textSize="14dp" />

        <com.share.jack.customverifycodeviewdemo.widget.CustomVerifyCodeView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/am_verify_code"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:background="@drawable/verify_code_bg"
            app:cus_text_color_disable="@android:color/white"
            app:cus_text_color_enable="@android:color/white"
            app:cus_text_size="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/am_btn_to_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to RecyclerViewActivity" />

</LinearLayout>
